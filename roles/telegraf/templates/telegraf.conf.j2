#jinja2:lstrip_blocks: True

[global_tags]

[agent]
  interval = "10s"
  round_interval = true
  metric_batch_size = 1000
  metric_buffer_limit = 10000
  collection_jitter = "0s"
  flush_interval = "10s"
  flush_jitter = "0s"
  precision = ""
  debug = false
  quiet = false
  logfile = ""
  omit_hostname = false

[[outputs.influxdb]]
  urls = ["http://192.168.1.23:8086"] # required
  database = "telegraf" # required
  retention_policy = ""
  write_consistency = "any"
  timeout = "5s"
  # username = "telegraf"
  # password = "metricsmetricsmetricsmetrics"
  content_encoding = "gzip"

[[inputs.cpu]]
  percpu = true
  totalcpu = true
  collect_cpu_time = false
  report_active = false

[[inputs.disk]]
  ignore_fs = ["tmpfs", "devtmpfs", "devfs"]
[[inputs.diskio]]
[[inputs.kernel]]
[[inputs.mem]]
[[inputs.processes]]
[[inputs.swap]]
[[inputs.system]]

# # Read metrics from one or more commands that can output to stdou
[[inputs.exec]]
  commands = [
    "sudo /etc/telegraf/pi_temp.sh",
    "python /etc/telegraf/boinc_stat.py"
  ]
  interval = "1m"
  timeout = "5s"
  data_format = "influx"
